<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/abilityScoreViewHolder"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability1Layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/abilityDesc1Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult1Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description" />

                <TextView
                    android:id="@+id/abilityResult1Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability2Layout"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ability1Layout"
                >

                <TextView
                    android:id="@+id/abilityDesc2Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult2Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description" />

                <TextView
                    android:id="@+id/abilityResult2Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability3Layout"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ability2Layout"
                >

                <TextView
                    android:id="@+id/abilityDesc3Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult3Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description" />

                <TextView
                    android:id="@+id/abilityResult3Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability4Layout"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ability3Layout"
                >

                <TextView
                    android:id="@+id/abilityDesc4Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult4Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description"/>

                <TextView
                    android:id="@+id/abilityResult4Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability5Layout"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ability4Layout"
                >

                <TextView
                    android:id="@+id/abilityDesc5Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult5Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description" />

                <TextView
                    android:id="@+id/abilityResult5Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/ability6Layout"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ability5Layout"
                >

                <TextView
                    android:id="@+id/abilityDesc6Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@+id/abilityResult6Txt"
                    android:textSize="30sp"
                    tools:text="Ability Description" />

                <TextView
                    android:id="@+id/abilityResult6Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Result" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>